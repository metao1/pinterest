<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.metao.pinterest">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
            android:name="com.metao.pinterest.activities.CustomApplication"
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">

        <activity
                android:name="com.metao.pinterest.activities.MainActivity"
                android:screenOrientation="portrait"
                android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.metao.pinterest.activities.DetailActivity"
                  android:theme="@style/AppTheme.DetailActivity">
        </activity>
    </application>
</manifest>
